# Configurações do Servidor
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base URLs
BASE_URL_PROD=https://api.reparaja.com
BASE_URL_SANDBOX=https://sandbox.api.reparaja.com

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/reparaja_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reparaja_db
DB_USER=postgres
DB_PASSWORD=password

# Redis (para cache e filas)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT e Autenticação
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800
JWT_ISSUER=reparaja-api
JWT_AUDIENCE=reparaja-users

# WhatsApp Business API (Meta)
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=600
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Criptografia
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# Webhook
WEBHOOK_SECRET=your-webhook-secret-key

# Planos e Limites
PLAN_START_PLATES=100
PLAN_START_MESSAGES=1000
PLAN_PRO_PLATES=500
PLAN_PRO_MESSAGES=10000
PLAN_MAX_PLATES=2000
PLAN_MAX_MESSAGES=50000
PLAN_ENTERPRISE_PLATES=10000
PLAN_ENTERPRISE_MESSAGES=100000

# Retenção de Dados (LGPD)
MESSAGE_RETENTION_DAYS=180
CONTACT_RETENTION_DAYS=365

# Monitoramento
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# Upload e Mídia
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ENABLE_IMAGE_PROCESSING=true
THUMBNAIL_SIZE=300
MAX_UPLOAD_FILES=10

# Segurança e Autenticação
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key
CORS_ORIGIN=http://localhost:3000,https://app.reparaja.com
CSRF_SECRET=your-csrf-secret-key

# Email (para reset de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@reparaja.com
SMTP_FROM_NAME=Repara-Já

# MFA (Autenticação de Dois Fatores)
MFA_ISSUER=Repara-Já
MFA_ALGORITHM=SHA1
MFA_DIGITS=6
MFA_PERIOD=30

# Auditoria e Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_MODE=lgpd
